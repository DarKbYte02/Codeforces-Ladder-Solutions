#include<iostream>
#define NUM 100
using namespace std;
int main(){
	int x[NUM],y[NUM],z[NUM],t,i=0,l=0,m=0,j=0;
	cin >> t;
		for(j=0;j<t;j++){
		cin >> x[j] >> y[j] >> z[j];
		}
		for(j=0;j<t;j++){
		i += x[j];
		l += y[j];
		m += z[j];
		}
		
	if((i==0)&&(l==0)&&(m==0))
	cout << "YES" << '\n';
	else
	cout << "NO" << '\n';
  return 0;
}
